@page "/courses/edit/{id:int}"
@model EditCourseModel


<h2>Edit Course</h2>
<form method="post">
    <input type="hidden" asp-for="Course.Id" />
    <div class="mb-3">
    <label class="form-label">Name</label>
    <input asp-for="Course.Name" class="form-control">
  </div>

  <div class="mb-3">
    <label class="form-label">Textbook</label>
    <input asp-for="Course.TextBook" class="form-control">
  </div>
  
  <div class="mb-3">
    <label class="form-label">Credit Hours</label>
    <input asp-for="Course.CreditHrs" class="form-control">
  </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>