@page "/Students"
@model Vidhyalaya.Pages_Students.IndexModel

<p>
    <a asp-page="Create"class="btn btn-success"><i class="bi bi-plus-lg"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Guardian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Grade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guardian.GuardianId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.GradeId)
            </td>
            <td>
                <a asp-page="/Student/Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a asp-page="/Student/Details" asp-route-id="@item.StudentId">Details</a> |
                <a asp-page="/Student/Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

